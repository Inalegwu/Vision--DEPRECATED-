{
  "name": "Vision",
  "description": "Sleek and Minimal Comic Book Reader",
  "version": "0.0.1",
  "author": {
    "name": "Ikwue Inalegwu"
  },
  "repository": {
    "url": "https://github.com/studiopc/Vision.git"
  },
  "main": "dist/main.js",
  "scripts": {
    "dev": "rimraf dist && run-p dev:webpack dev:electron",
    "build": "rimraf dist && cross-env NODE_ENV=\"production\" webpack --progress",
    "dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
    "dev:electron": "wait-on dist/main.js dist/index.html && electronmon .",
    "db:generate": "drizzle-kit generate:sqlite",
    "postinstall": "electron-rebuild"
  },
  "electronmon": {
    "patterns": [
      "dist/**/*"
    ]
  },
  "dependencies": {
    "@electron/rebuild": "^3.3.0",
    "@phosphor-icons/react": "^2.0.14",
    "@stitches/react": "^1.2.8",
    "@tanstack/react-query": "^4.18.0",
    "@trpc/client": "^10.43.1",
    "@trpc/react-query": "^10.43.1",
    "@trpc/server": "^10.43.1",
    "@types/better-sqlite3": "^7.6.6",
    "better-sqlite3": "^9.0.0",
    "drizzle-orm": "^0.28.6",
    "electron-trpc": "^0.5.2",
    "framer-motion": "^10.16.4",
    "jotai": "^2.5.1",
    "libarchive-wasm": "^1.1.0",
    "localforage": "^1.10.0",
    "match-sorter": "^6.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.17.0",
    "sort-by": "^1.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.35",
    "@types/react-dom": "^18.2.14",
    "@types/uuid": "^9.0.6",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "drizzle-kit": "^0.19.13",
    "electron": "^27.0.3",
    "electronmon": "^2.0.2",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.1.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
